# Archivo de configuración para el servidor de producción
# Renombrar a .env y configurar con los datos reales del servidor

# Configuración de Base de Datos
DB_HOST=localhost
DB_NAME=qr_verification
DB_USER=tu_usuario_db
DB_PASS=tu_password_db

# Configuración del Dominio
DOMAIN=cisscad.css.gob.pa
PROTOCOL=https

# Configuración de Seguridad
ENABLE_HTTPS=true
SECURE_COOKIES=true

# Configuración de Logs
LOG_LEVEL=INFO
LOG_FILE=/var/log/qr_verification.log

# Configuración de Email (opcional para notificaciones)
SMTP_HOST=smtp.css.gob.pa
SMTP_PORT=587
SMTP_USER=sistema@css.gob.pa
SMTP_PASS=password_email

# Configuración de la aplicación
APP_NAME=Sistema de Verificación QR - CSS
APP_ENV=production
DEBUG=false